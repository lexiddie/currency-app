<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/home_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Home"
    android:background="@color/colorDarkGrey">

    <RelativeLayout
        android:id="@+id/handleHomeKeyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/noto_sans"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/txtHomeDate"
                android:layout_width="match_parent"
                android:layout_height="50dp" >
            </TextView>
        <LinearLayout
            android:layout_below="@id/txtHomeDate"
            android:id="@+id/home_first"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/handleCurrency"
                android:layout_width="match_parent"
                android:padding="3dp"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_style_black"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgFlag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/main_currency" />
                <TextView
                    android:id="@+id/txtCode"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txtName"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:fontFamily="@font/noto_sans"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_style_black"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgSymbol"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"
                    android:contentDescription="@string/main_currency" />
                <EditText
                    android:id="@+id/txtValue"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="17sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/noto_sans"
                    android:padding="10dp"
                    android:background="@drawable/textbox_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:layout_marginEnd="10dp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/home_swap"
            android:background="@drawable/swap"
            android:layout_below="@id/home_first"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true">
        </ImageView>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_below="@id/home_swap"
            android:id="@+id/srlHomeRefresh"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDarkGrey">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorDarkGrey">
            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</FrameLayout>